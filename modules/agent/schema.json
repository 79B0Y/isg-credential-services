{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["system_prompt", "subscribed_modules"],
  "properties": {
    "system_prompt": {
      "type": "string",
      "title": "系统提示词",
      "description": "AI Agent 的系统提示词，定义 Agent 的角色和行为",
      "default": "You are a helpful AI assistant that helps users control their smart home and communicate via Telegram.",
      "minLength": 1
    },
    "subscribed_modules": {
      "type": "array",
      "title": "订阅的模块",
      "description": "Agent 将订阅这些模块的消息和事件",
      "items": {
        "type": "string",
        "enum": ["telegram", "home_assistant", "whatsapp"]
      },
      "default": ["telegram"],
      "uniqueItems": true
    },
    "openai_model": {
      "type": "string",
      "title": "OpenAI 模型",
      "description": "使用的 OpenAI 模型",
      "default": "gpt-4",
      "enum": ["gpt-4", "gpt-4-turbo", "gpt-3.5-turbo", "gpt-4o", "gpt-4o-mini"]
    },
    "temperature": {
      "type": "number",
      "title": "Temperature",
      "description": "AI 回复的随机性 (0.0 - 2.0)",
      "default": 0.7,
      "minimum": 0,
      "maximum": 2
    },
    "max_tokens": {
      "type": "integer",
      "title": "最大 Token 数",
      "description": "AI 回复的最大长度",
      "default": 1000,
      "minimum": 1,
      "maximum": 4096
    },
    "auto_reply": {
      "type": "boolean",
      "title": "自动回复",
      "description": "是否自动回复收到的消息",
      "default": true
    },
    "context_memory": {
      "type": "integer",
      "title": "上下文记忆",
      "description": "保留最近多少条消息作为上下文",
      "default": 10,
      "minimum": 0,
      "maximum": 50
    },
    "enabled": {
      "type": "boolean",
      "title": "启用 Agent",
      "description": "是否启用 AI Agent 自动处理",
      "default": false
    }
  }
}



