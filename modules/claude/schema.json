{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Claude API Credentials",
  "description": "Anthropic Claude API credentials for AI assistant access",
  "properties": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Anthropic Claude API key from your account",
      "required": true,
      "sensitive": true,
      "minLength": 40,
      "maxLength": 120,
      "pattern": "^sk-ant-[A-Za-z0-9_-]+$",
      "example": "sk-ant-api03-abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12",
      "ui": {
        "widget": "password",
        "placeholder": "Enter your Claude API key",
        "help": "Get your API key from https://console.anthropic.com/"
      }
    }
  },
  "required": ["api_key"],
  "additionalProperties": false,
  "examples": [
    {
      "api_key": "sk-ant-api03-abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12"
    }
  ]
}